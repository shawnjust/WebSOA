<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.getrecipes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="com.example.getrecipes.MainPageActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.getrecipes.FirstPageActivity"
            android:label="@string/title_activity_first_page" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.getrecipes.SearchPageActivity"
            android:label="@string/title_activity_search_page" >
        </activity>
        <activity
            android:name="com.example.getrecipes.SearchResultActivity"
            android:label="@string/title_activity_search_result" >
        </activity>
    </application>

</manifest>